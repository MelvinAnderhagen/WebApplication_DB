@page
@model WebApplication3.Pages.OrderInfoModel
@{
}

<h1>@Model.Id</h1>
<h2>@Model.CustomerName, @Model.ContactName</h2>
@Model.DateTime
@if (@Model.HasFreeFreight == true)
{
    <h4>Has free shipping</h4>
}
else
{
    <h4>Does not have free shipping</h4>
}


<table class="table">
    @foreach(var order in @Model.OrderRows)
    {
        <tr>
            <td>@order.ProductName</td>
            <td>@order.Quantity</td>
            <td>@order.UnitPrice</td>
            <td>@order.RowPrice()</td>
        </tr>
    }
</table>